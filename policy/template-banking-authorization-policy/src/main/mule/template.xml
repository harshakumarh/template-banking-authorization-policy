<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:banking-custom-policy-ext="http://www.mulesoft.org/schema/mule/banking-custom-policy-ext"
      xmlns:validation="http://www.mulesoft.org/schema/mule/validation"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xmlns:http-policy="http://www.mulesoft.org/schema/mule/http-policy"
      xmlns:http-transform="http://www.mulesoft.org/schema/mule/http-policy-transform"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
               http://www.mulesoft.org/schema/mule/http-policy http://www.mulesoft.org/schema/mule/http-policy/current/mule-http-policy.xsd
               http://www.mulesoft.org/schema/mule/http-policy-transform http://www.mulesoft.org/schema/mule/http-policy-transform/current/mule-http-policy-transform.xsd
               http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd
               http://www.mulesoft.org/schema/mule/validation http://www.mulesoft.org/schema/mule/validation/current/mule-validation.xsd
               http://www.mulesoft.org/schema/mule/banking-custom-policy-ext http://www.mulesoft.org/schema/mule/banking-custom-policy-ext/current/mule-banking-custom-policy-ext.xsd">

    <validation:config name="Validation_Config" doc:name="Validation Config"
                       doc:id="4bc8cd93-75ea-4c44-b3f6-af0ff694f861"/>
    <banking-custom-policy-ext:config name="Banking_custom_policy_ext_Config"
                                      doc:name="Banking-custom-policy-ext Config"
                                      doc:id="be04b102-41ed-46e4-9935-0b27cd77d57d"
                                      issuer="{{{issuer}}}"
                                      jwksUrl="{{{jwks}}}"
                                      signingAlgorithm="{{{signatureAlg}}}"
                                      encryptionKey="{{{encryptionKey}}}"/>

    <http-policy:proxy name="{{{policyId}}}-template-banking-authorization-policy">
        <http-policy:source>
            <try>

                <ee:transform doc:name="Save Authorization header and payload"
                              doc:id="8ff1dc02-c451-4235-b32b-d8ff601f9a97">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/java
---
attributes.headers.authorization]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="inputPayload"><![CDATA[payload]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
                <validation:is-not-null doc:name="Exists Authorization header"
                                        doc:id="e2f66769-f8aa-4baa-8104-9854e9b24723" config-ref="Validation_Config"
                                        value="#[payload]" message="Authorization header is null"/>
                <validation:is-true doc:name="Starts with Bearer" doc:id="db3b545d-a644-43b0-bb65-1b1d2bf85ba5"
                                    config-ref="Validation_Config"
                                    message="Authorization header doesn't start with 'Bearer '"
                                    expression='#[payload startsWith("Bearer ")]'/>
                <banking-custom-policy-ext:validate-jwt doc:name="Validate jwt"
                                                        doc:id="154eff6c-3aae-404b-8348-88844b9f3b80"
                                                        config-ref="Banking_custom_policy_ext_Config"
                                                        token="#[payload[7 to sizeOf(payload) -1]]"/>
                <ee:transform doc:name="Set variable claims and payload" doc:id="80fe1e31-8dc2-49a2-bd23-773da1547cd9">
                    <ee:message>
                        <ee:set-payload><![CDATA[vars.inputPayload]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="claims"><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
                <remove-variable doc:name="Remove Variable inputPayload" doc:id="30c4a55f-4d65-403e-8777-1919124170cc"
                                 variableName="inputPayload"/>

                <http-policy:execute-next/>

                <error-handler>
                    <on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate"
                                        doc:id="3843b09b-7a71-4e5d-84d1-5a6538c43041"
                                        type="VALIDATION:INVALID_BOOLEAN, VALIDATION:NULL">

                        <http-transform:set-response statusCode="400">
                            <http-transform:body>#[
                                output application/json
                                ---
                                {"error": " $(error.description)"}
                                ]
                            </http-transform:body>
                        </http-transform:set-response>
                    </on-error-propagate>
                    <on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate"
                                        doc:id="3843b09b-7a71-4e5d-84d1-5a6538c43041"
                                        type="BANKING-CUSTOM-POLICY-EXT:INVALID_JWT">

                        <http-transform:set-response statusCode="401">
                            <http-transform:body>#[
                                output application/json
                                ---
                                {"error": " $(error.description)"}
                                ]
                            </http-transform:body>
                        </http-transform:set-response>
                    </on-error-propagate>
                </error-handler>
            </try>
        </http-policy:source>
    </http-policy:proxy>

</mule>
